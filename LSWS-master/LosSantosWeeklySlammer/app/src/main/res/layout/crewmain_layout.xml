<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF">

    <fragment
        android:id="@+id/toolbar_fragment"
        android:name="com.madgeek.devonaward.lossantosweeklyslammer.BG_Frag"
        android:layout_width="match_parent"
        android:layout_height="260dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#000000">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crewTxt"
            android:id="@+id/crewTxt"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#FFFFFF"
            android:gravity="center"/>
    </LinearLayout>

    <fragment
        android:id="@+id/card_fragment"
        android:name="com.madgeek.devonaward.lossantosweeklyslammer.Crew_Frag"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>